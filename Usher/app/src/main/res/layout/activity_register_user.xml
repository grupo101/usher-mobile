<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".views.RegisterUserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/registrar_usuario"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/i_descLogo"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/etNameRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/et_name"
        android:inputType="text"
        android:importantForAutofill="no" tools:targetApi="o" />

    <EditText
        android:id="@+id/etSurNameRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/et_lastName"
        android:inputType="text"
        android:importantForAutofill="no" tools:targetApi="o"/>

    <EditText
        android:id="@+id/etUserRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/et_username"
        android:inputType="text"
        android:importantForAutofill="no" tools:targetApi="o"/>

    <EditText
        android:id="@+id/etPasswordRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/etPassword"
        android:inputType="textPassword"
        android:importantForAutofill="no" tools:targetApi="o"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/b_signup"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_green" />

    <ProgressBar
        android:id="@+id/progressRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal" />

</LinearLayout>